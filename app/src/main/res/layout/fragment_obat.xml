<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background_baru"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:id="@+id/tv_obat_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="186dp"
        android:text="Cari Obat Terdekat"
        android:textSize="75px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gambar_pasien" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Hello!"
                android:textColor="#FFF"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patient_history_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rizky Chandra"
                android:textColor="#FFF"
                android:textSize="35dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_obat"
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="9dp" />
<!--        tools:listitem="@layout/item_row_penyakit" />-->


</RelativeLayout>